# Configurações para PixTurbinado
RewriteEngine On

# Permitir acesso a arquivos com caracteres especiais
RewriteRule ^(.*)%40(.*)$ /$1@$2 [L,R=301]
RewriteRule ^(.*)%2540(.*)$ /$1@$2 [L,R=301]

# Configurar MIME types para arquivos CSS e JS
AddType text/css .css
AddType application/javascript .js
AddType image/svg+xml .svg
AddType audio/mpeg .mp3

# Desabilitar cache para desenvolvimento
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 0 seconds"
    ExpiresByType application/javascript "access plus 0 seconds"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Configurar headers de segurança
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Cache-Control "no-cache, no-store, must-revalidate"
</IfModule>

# Fallback para SPA
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ /$1/index.html [L]
